{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Transcribe AI",
  "background": {
    "service_worker": "background.js"
 },
  "action": {
    "default_title": "Open Audio Transcriber"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["tabCapture", "activeTab", "sidePanel", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "optional_permissions": [ "background"]
}